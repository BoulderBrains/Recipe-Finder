<body>
	<div class="container-fluid text-center">
		<h1 class="text-center title">Recipe search</h1>

		<form id="ingredients-form">
			<div class="input-group mb-3">
				<input id="ingredient-input" class="ingredient-input" type="text" placeholder="Enter an ingredient you have, add it to your list" aria-label="" aria-describedby="basic-addon1">
				<div class="input-group-prepend">
				  <button id="find-ingredient" class="btn btn-success add-ingredient-button" type="submit">Add Ingredient</button>
				</div>
			  </div>
		</form>

		<div class="ingredients-list-wrap">Ingredients list: 
			<ol class="ingredients-list"></ol>
		</div>
		
		<!-- This form will be where users input data about the recipes -->
		<form id="recipe-form">
			<div class="directions-text">When your list is complete, search for recipes!</div>
			<label for="recipe-input"></label><br>
			<!-- This button will trigger our AJAX call -->
			<input id="find-recipe" class="btn btn-login recipe-search-button" type="submit" value="Search For Recipes">
		</form>

		<footer class="footer">
    		<div class="container">
       			<span class="text-muted">
					{{#each users}}
						<p class="user-name-display">Welcome Back: {{ this.username }}</h1>
						<p class="favorite-recipe-display">Favorite Recipe: {{ this.favorited }}</h3>
					{{/each}}
				</span>
			</div>
    	</footer>

		<!-- We'll be dumping our JSON contents in here -->
		<div id="recipe-view" class="col-sm-12 row"></div>

		<!-- Jquery -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
		<!-- Script -->
		<script src="../assets/javascript/app.js"></script>

	</div>
</body>

</html>